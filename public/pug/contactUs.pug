doctype html
html(lang="ar" dir='rtl')
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    link(rel='icon', type='image/x-icon', href='/assets/images/favIcon.png')
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    include includes/styles.pug
    include includes/mixins.pug
    title الصفحة الرئيسة
  body
    .home-page-layout 
    
      +navbar('contact')

      +pageBackgroundSection('تواصل معنا','pagesBg.png')
      main.main-padding
        .container 
            form.contact-form
              h3.form-title ابقى على تواصل معنا
              p.form-sub-title تواصل معنا، في حال واجهتك مشكلة أو لديك إقتراح لتحسين جودة الموقع
              .inputs-box 
                input(class="input-form " , type="text" placeholder="الاسم الأول")
                input(class="input-form " , type="text" placeholder="الاسم الثاني")
              .inputs-box 
                input(class="input-form " , type="email" placeholder="البريد الالكتروني")
                input(class="input-form " , type="text" placeholder="رقم الجوال")
              textarea(class="contact-message " placeholder="الرسالة")
              +GlobalBtn("أرسل")


    
    include includes/footer.pug


    include includes/script.pug

