//- Start Input Box Mixin 
mixin globalInput(labelFor,label,type,placeholder)
  .global-input-box.d-flex.flex-column 
    label(for= labelFor)= label
    input(type= type ,id= labelFor, placeholder= placeholder)
//- End Input Box Mixin 

