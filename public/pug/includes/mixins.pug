//- Start About Us Section 
mixin AboutUs(aboutImg,aboutTitle,aboutText,position)
  section.about-us-section.d-grid
    if position== 'even'
      .about-img-box 
        img(src=`../assets/images/${aboutImg}`, alt="About Img", class='about-img')
      .about-info-box 
        h2.about-title=aboutTitle 
        p.about-text=aboutText 
    else if position== 'odd'
      .about-info-box 
        h2.about-title=aboutTitle 
        p.about-text=aboutText 
      .about-img-box 
        img(src=`../assets/images/${aboutImg}`, alt="About Img", class='about-img')
//- End About Us Section 


